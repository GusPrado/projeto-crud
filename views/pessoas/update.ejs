<% include ../partials/header.ejs %>
<br><br><br>

<%= JSON.stringify(pessoa) %>
<h1>Atualizar pessoa</h1>
<p><a href="/pessoas">Voltar para listagem</a></p>
<form method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= pessoa.nome %>">
  </div>
  <div class="form-group">
    <label for="nascimento">Nascimento</label>
    <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="aaaa/mm/dd" value="<%= pessoa.nascimento %>">
  </div>
  <div class="form-group">
    <label for="cargo">Cargo</label>
    <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Cargo" value="<%= pessoa.cargo %>">
  </div>
 
  <button type="submit" class="btn btn-default">Salvar</button>
</form>

<% include ../partials/footer.ejs %>